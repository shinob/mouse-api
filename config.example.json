{
  "security": {
    "require_api_key": true,
    "api_keys": [
      "your-secure-api-key-here-change-this"
    ],
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_limit": 10
    }
  },
  "server": {
    "host": "127.0.0.1",
    "port": 5000,
    "debug": false
  },
  "logging": {
    "level": "INFO",
    "log_requests": true,
    "log_file": "mouse_api.log"
  }
}